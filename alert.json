{
  "name": "Wix Boost WhatsApp Alert",
  "description": "Checks for any application button on Wix Boost and sends a WhatsApp message when available.",
  "triggers": [{
    "type": "interval",
    "every": 1,
    "unit": "hour"
  }],
  "actions": [
    {
      "type": "fetch",
      "url": "https://www.wix-boost.com/",
      "method": "GET",
      "assignVariable": "pageContent"
    },
    {
      "type": "if",
      "condition": {
        "regex": ["{{pageContent}}", "<button.*?>.*?</button>"]
      },
      "actions": [
        {
          "type": "open-tab",
          "url": "https://web.whatsapp.com/send?phone=972526276865&text=%D7%A0%D7%9E%D7%A6%D7%90%20%D7%9B%D7%A4%D7%AA%D7%95%D7%A8%20%D7%94%D7%92%D7%A9%D7%94%20%D7%91%D7%90%D7%AA%D7%A8%20Wix%20Boost!%20%D7%91%D7%93%D7%95%D7%A7%20%D7%91%D7%A7%D7%99%D7%A9%D7%94:%20https://www.wix-boost.com/"
        }
      ]
    }
  ]
}
